<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="vertical"
        android:padding="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Title inside the dialog content (dialog also has a title) -->
        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Emotion Sensing Consent"
            android:textStyle="bold"
            android:textSize="18sp"
            android:paddingBottom="8dp" />

        <TextView
            android:id="@+id/tvExplainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="We can analyze facial expressions on-device during this session. No images or video are stored."
            android:paddingBottom="12dp" />

        <!-- Main toggle (used by your code) -->
        <com.google.android.material.materialswitch.MaterialSwitch
            android:id="@+id/swEnableAffect"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Enable emotion analysis (on-device)"
            android:checked="false" />

        <!-- Secondary toggle kept for compatibility with your code; disabled here -->
        <com.google.android.material.materialswitch.MaterialSwitch
            android:id="@+id/swEnableLogging"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Also store a record every 5 seconds"
            android:checked="false"
            android:enabled="false"
            android:paddingTop="8dp" />

        <TextView
            android:id="@+id/tvPrivacy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="You can stop at any time. This setting affects only this session."
            android:textSize="12sp"
            android:paddingTop="12dp"/>
    </LinearLayout>
</ScrollView>
